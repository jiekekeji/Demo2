<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    tools:context="com.wh.name.MainActivity" >

    <Button
        android:id="@+id/radio_btn_0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_film_selector"
        android:button="@null"
        android:drawableRight="@drawable/film_right"
        android:gravity="center"
        android:text="深圳" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/light_blue" />

    <Button
        android:id="@+id/radio_btn_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_film_selector"
        android:button="@null"
        android:drawableRight="@drawable/film_right"
        android:gravity="center"
        android:text="全城" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/light_blue" />

    <Button
        android:id="@+id/radio_btn_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_film_selector"
        android:button="@null"
        android:drawableRight="@drawable/film_right"
        android:gravity="center"
        android:text="类型" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/light_blue" />

    <Button
        android:id="@+id/radio_btn_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_film_selector"
        android:button="@null"
        android:drawableRight="@drawable/film_right"
        android:gravity="center"
        android:text="筛选" />

</LinearLayout>